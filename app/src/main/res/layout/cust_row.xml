<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/typeTxt"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/payTypeTxt"
            android:textColor="#1c5cff"
            android:layout_alignBottom="@+id/typeTxt"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="10000.00"
            android:id="@+id/amountTxt"
            android:textColor="#ca0000"
            android:layout_alignTop="@+id/payTypeTxt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/subTypeTxt"
            android:textColor="#acacac"
            android:layout_below="@+id/typeTxt"
            android:layout_alignLeft="@+id/typeTxt"
            android:layout_alignStart="@+id/typeTxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/currencyTxt"
            android:layout_below="@+id/payTypeTxt"
            android:textColor="#acacac"
            android:layout_alignRight="@+id/amountTxt"
            android:layout_alignEnd="@+id/amountTxt" />
    </RelativeLayout>
</LinearLayout>