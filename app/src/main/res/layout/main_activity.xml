<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Today Expenses :"
        android:id="@+id/Txt1"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="30dp"
        android:clickable="false" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/dailyExpTxt"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="30dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Weekly Expenses :"
        android:id="@+id/Txt2"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/Txt1"
        android:layout_alignLeft="@+id/Txt1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/weeklyExpTxt"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/dailyExpTxt"
        android:layout_alignRight="@+id/dailyExpTxt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Monthly Expenses :"
        android:id="@+id/Txt3"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/Txt2"
        android:layout_alignLeft="@+id/Txt2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/monthlyExpTxt"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/weeklyExpTxt"
        android:layout_alignRight="@+id/weeklyExpTxt"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Expense"
        android:id="@+id/updateBtn"
        android:onClick="addExpense"
        android:background="@drawable/btn"
        android:layout_below="@+id/Txt4"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:text="Testing"
        android:onClick="runTest"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/addIncBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Text"
        android:id="@+id/dailyIncTxt"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/updateBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Daily Income :"
        android:id="@+id/Txt5"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/updateBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Weekly Income :"
        android:id="@+id/Txt6"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/Txt5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Monthly Income :"
        android:id="@+id/Txt7"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/Txt6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Year to date :"
        android:id="@+id/Txt8"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/Txt7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Text"
        android:id="@+id/weekIncTxt"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/dailyIncTxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Text"
        android:id="@+id/monthIncTxt"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/weekIncTxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Text"
        android:id="@+id/annualIncTxt"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/monthIncTxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Year To Date :"
        android:id="@+id/Txt4"
        android:layout_below="@+id/Txt3"
        android:layout_alignLeft="@+id/Txt3"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/annualExpTxt"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/monthlyExpTxt"
        android:layout_alignRight="@+id/monthlyExpTxt"
        />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Income"
        android:id="@+id/addIncBtn"
        android:onClick="addIncome"
        android:background="@drawable/btn_green"
        android:layout_below="@+id/Txt8"
        android:layout_alignParentLeft="true"
        android:textColor="#ffffff"

        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Side Bar"
        android:id="@+id/sideBarBtn"
        android:onClick="showSideBar"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Expenses"
        android:id="@+id/viewExpBtn"
        android:textColor="#ffffff"
        android:background="@drawable/btn"
        android:layout_alignTop="@+id/updateBtn"
        android:onClick="showDailyExp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Incomes"
        android:id="@+id/viewIncBtn"
        android:layout_alignBottom="@+id/addIncBtn"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_green"
        android:layout_alignParentEnd="true" />



</RelativeLayout>
</ScrollView>